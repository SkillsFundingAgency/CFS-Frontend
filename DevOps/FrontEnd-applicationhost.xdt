<configuration xmlns:xdt="http://schemas.microsoft.com/XML-Document-Transform">
  <system.webServer xdt:Transform="InsertIfMissing">
    <security xdt:Transform="InsertIfMissing">
        <requestFiltering removeServerHeader="true" xdt:Transform="SetAttributes(removeServerHeader)" />
    </security>
    <httpProtocol xdt:Transform="InsertIfMissing">
      <customHeaders xdt:Transform="Remove" />
      <customHeaders xdt:Transform="InsertIfMissing" >
        <remove name="Server" />
        <remove name="X-Powered-By" />
        <add name="Strict-Transport-Security" value="max-age=31536000; includeSubDomains" />
        <add name="X-Content-Type-Options" value="nosniff" />
        <add name="X-Frame-Options" value="sameorigin" />
        <add name="Content-Security-Policy" value="default-src 'none';connect-src 'self' https://login.microsoftonline.com/ https://app-t1dv-cfs01-v2.azurewebsites.net https://dv.calculate-funding.education.gov.uk https://app-t1te-cfs01-v2.azurewebsites.net https://te.calculate-funding.education.gov.uk https://app-t1in-cfs01-v2.azurewebsites.net https://app-t1sb-cfs01-v2.azurewebsites.net https://app-t1pp-cfs01-v2.azurewebsites.net https://pp.calculate-funding.education.gov.uk https://app-t1pr-cfs01-v2.azurewebsites.net https://calculate-funding.education.gov.uk; manifest-src 'self'; script-src 'self' 'unsafe-eval' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self'; base-uri 'self'; form-action 'self'; font-src 'self';" />
        <add name="X-XSS-Protection" value="0" />
      </customHeaders>
    </httpProtocol>
  </system.webServer>
</configuration>